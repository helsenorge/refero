{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["vite/client"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true
  },
  "paths": {
    "@helsenorge/refero": ["./lib"],
    "@": ["src"],
    "@components": ["src/components"],
    "@fromComponents": ["src/components/fromComponents"]
  },
  "include": ["src", "preview", "lib"],
  "exclude": ["node_modules", "lib", "preview", "**/__tests__/*", "**__mocks__/", "**/*-spec.*"]
}
